<%= form_for(@portfolio_item) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
  <ul>
    <%= f.fields_for :technologies do |tech_f| %>
    <li>
      <%= tech_f.label :name %>
      <%= tech_f.text_field :name %>
    </li>
    <% end %>
  </ul>
<% end %>
